<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dish"
            style="@style/title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="你大爷的菜名" />

        <TextView
            android:id="@+id/count"
            style="@style/content_style"
            android:layout_below="@id/title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="点餐次数"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/price"
            style="@style/title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="价钱"
            android:textColor="#ff0000" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_layout"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/content" >

            <Button
                android:id="@+id/addNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:background="@drawable/button_backgroud"
                android:text="+" />

            <TextView
                android:id="@+id/number"
                style="@style/content_style"
                android:layout_centerInParent="true"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@id/addNum"
                android:text="数量"
                android:visibility="gone" />

            <Button
                android:id="@+id/reduceNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@id/number"
                android:background="@drawable/button_backgroud"
                android:text="-"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            style="@style/horizontal_view_style"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/content"
            style="@style/content_style"
            android:layout_below="@id/title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="描述"
            android:textColor="#000000"
            android:textSize="13dp" />

        <View
            style="@style/horizontal_view_style"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp" />
    </LinearLayout>

    <View
        style="@style/horizontal_view_style"
        android:layout_width="match_parent"
        android:layout_gravity="bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_launcher" />

        <RelativeLayout
            android:id="@+id/shopping_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/price_unit"
                style="@style/title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="价钱"
                android:textColor="#ff0000"
                android:textSize="13dp" />

            <TextView
                style="@style/content_style"
                android:layout_below="@id/price_unit"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="运费 10元 "
                android:textColor="#000000" />
        </RelativeLayout>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:layout_weight="2"
            android:background="@drawable/button_backgroud"
            android:text="提交订单" />
    </LinearLayout>

</LinearLayout>